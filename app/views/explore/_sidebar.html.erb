<h4>
  <%= fa_icon 'archive' %>
  <%= link_to 'Package Managers', platforms_path %>
</h4>
<div class='pictogram-list'>
  <% @platforms.each do |platform| %>
    <% next if platform.term.downcase == 'go' %>
    <a class="pictogram tip pictogram-<%= platform.term.downcase %>" href='<%= platform.term %>' title='<%= platform.term %>'></a>
  <% end %>
</div>
<hr>
<h4>
  <%= fa_icon 'code' %>
  <%= link_to 'Popular Languages', languages_path %>
</h4>
<div class='pictogram-list'>
  <% @languages.each do |language| %>
    <a class="pictogram tip pictogram-<%= language.term.downcase %>" title='<%= language.term %>' href='<%= language_path(language.term) %>'></a>
  <% end %>
</div>
<hr>
<h4>
  <%= fa_icon 'gavel' %>
  <%= link_to 'Popular Licenses', licenses_path %>
</h4>
<% @licenses.each do |license| %>
  <p class='list'>
    <strong><%= link_to format_license(license.term), license_path(license.term) %></strong>
    <small><%= pluralize number_to_human(license['count']), 'project' %></small>
  </p>
<% end %>
<hr>
<h4>
  <%= fa_icon 'tags' %>
  <%= link_to 'Popular Keywords', keywords_path %>
</h4>
<% @keywords.each do |keyword| %>
  <% if keyword.term.present? %>
    <p class='list'>
      <strong><%= link_to keyword.term, keyword_path(keyword.term) %></strong>
      <small><%= pluralize number_to_human(keyword['count']), 'project' %></small>
    </p>
  <% end %>
<% end %>
