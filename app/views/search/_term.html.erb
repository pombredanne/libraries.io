<% term['term'] = term['term'].downcase if name == 'host_type' %>
<% active = term['term'] == params[name.to_sym] %>
<li class='<%= 'active' if active %>'>
  <% if active %>
    <%= link_to format_term(term['term']), url_for(params.except(:host).merge(name.to_sym => nil, page: nil).permit!) %>
  <% else %>
    <%= link_to format_term(term['term']), url_for(params.except(:host).merge(name.to_sym => term['term'], page: nil).permit!) %>
    <small><%= number_to_human term['count'] %></small>
  <% end %>
</li>
